{% extends "default.twig" %}
{% block title %}Upravte data{% endblock %}

{% block content %}
     
     <div>
        <h1>Upravte data</h1>
        
       
      {% if u == "vystavovatele" %}
       <div class="well col-md-6">
            <form id="registerForm" method="POST" action="" novalidate="novalidate">
                <div class="form-group">
                    <label for="username" class="control-label">Jméno</label>
                    <input type="text" class="form-control" id="username" name="upr[jmeno]" value={{a}} required="" title="Prosím, vyplňte Vaše jméno" placeholder="Jméno">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="username" class="control-label">Příjmení</label>
                    <input type="text" class="form-control" id="username" name="upr[prijmeni]" value={{b}} required="" title="Prosím, vyplňte Vaše příjmení" placeholder="Příjmení">
                    <span class="help-block"></span>
                </div>
               <div class="form-group">
                    <label for="username" class="control-label">Email</label>
                    <input type="email" class="form-control" id="username" name="upr[email]" value={{c}} required="" title="Prosím, vyplňte Vaš email" placeholder="Email">
                    <span class="help-block"></span>
                </div>
                <br>
                {% if hlaska != "" %}
                    <div class="alert alert-danger">{{ hlaska|raw}}</div>
                {% endif %}
                <br>
                <input type="submit" name="uprav" value="Upravit" class="btn btn-primary btn-block">
            </form>   
        </div>
        {% endif %}
        {% if u == "rozhodci" %}
            <div class="well col-md-6">
            <form id="registerForm" method="POST" action="" novalidate="novalidate">
                <div class="form-group">
                    <label for="username" class="control-label">Jméno</label>
                    <input type="text" class="form-control" id="username" name="upr[jmeno]" value={{a}} required="" title="Prosím, vyplňte jméno" placeholder="Jméno">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="username" class="control-label">Příjmení</label>
                    <input type="text" class="form-control" id="username" name="upr[prijmeni]" value={{b}} required="" title="Prosím, vyplňte příjmení" placeholder="Příjmení">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="username" class="control-label">Číslo kruhu</label>
                    <input type="text" class="form-control" id="username" name="upr[kruh]" value="" required="" title="Prosím, vyplňte číslo kruhu" placeholder="Číslo kruhu">
                    <span class="help-block"></span>
                </div>
         
                
                <br>
                {% if hlaska != "" %}
                    <div class="alert alert-danger">{{ hlaska|raw}}</div>
                {% endif %}
                <br>
                <input type="submit" name="uprav" value="Upravit" class="btn btn-primary btn-block">
            </form>   
        </div>
        {% endif %}    
        {% if u == "psi" %}
        <div class="well col-md-6">
            <form id="registerForm" method="POST" action="" novalidate="novalidate">
                <div class="form-group">
                    <label for="username" class="control-label">Jméno psa</label>
                    <input type="text" class="form-control" id="dog" name="upr[pes]" value={{a}} required="" title="Prosím, vyplňte jméno psa" placeholder="Jméno psa">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="username" class="control-label">Pohlaví psa (m/f)</label>
                    <input type="text" class="form-control" id="dog" name="upr[pohl]" value={{c}} required="" title="Prosím, vyplňte pohlaví psa" placeholder="Pohlaví psa">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="username" class="control-label">Třída psa</label>
                    <input type="text" class="form-control" id="dog" name="upr[trida]" value={{b}} required="" title="Prosím, vyplňte třídu psa" placeholder="Třída psa">
                    <span class="help-block"></span>
                </div>
         
                
                <br>
                {% if hlaska != "" %}
                    <div class="alert alert-danger">{{ hlaska|raw}}</div>
                {% endif %}
                <br>
                <input type="submit" name="uprav" value="Upravit" class="btn btn-primary btn-block">
            </form>   
        </div>
        {% endif %} 
    </div>
     
{% endblock %}